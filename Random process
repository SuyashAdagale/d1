clc;
clear all;
close all;

n = 1000;        % Number of samples
mu = 0;          % Mean of Gaussian random process
sigma = 1;       % Standard deviation

% Generate Gaussian random process
y = normrnd(mu, sigma, 1, n);

% Estimate Power Spectral Density (PSD) using periodogram
Gy = periodogram(y);

% Compute Autocorrelation using Inverse FFT of PSD
Ry = abs(ifft(Gy, 256));   % ACF is IFFT of PSD

% Rearranging to make zero-lag correlation at center
Ry = [Ry(130:256)' Ry(1:129)'];
t = -127:1:128;   % Time-shift axis

% Plot results
figure;

subplot(1,2,1);
plot(Gy);
xlabel('Frequency Samples');
ylabel('Power');
title('Power Spectral Density (PSD)');
grid on;

subplot(1,2,2);
stem(t, Ry);
xlabel('Time Shift');
ylabel('Autocorrelation');
title('Autocorrelation Function (ACF)');
grid on;
